.container{
  min-height: 100%;
  overflow: hidden;
  overflow-y: hidden;  
}
/* -----头部导航栏----- */
.window-nav{
  height: 115px;
  width: 100%;
  background-color: #FF4F9C;
  border-bottom-left-radius: 50px;
  border-bottom-right-radius: 50px;
}
.nav-text{
  font-size: 16px;
  color: #FFFFFF;
}
.nav-head{
  padding: 30px 15px;
}
.logo{
  height: 18px;
  width: 68px;
}
.nav-search-form{
  border-radius: 15px;
  height: 24px;
  width: 167px;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  margin-right: 30%;
  margin-bottom: 5px;
  text-align: center;
}
.body-size{
  width: 90%;
  margin: 0 auto;
  background-color: #F0F0F0;
}
.popular{
  background-color: #ffffff;
}
/* --------- */
.userinfo {
	align-items: center;
}
.userinfo-but {
	flex-direction: column;
	align-items: center;
}
.userinfo-avatar {
	width: 60px;
	height: 60px;
  background-color: #ffffff;
}
.userinfo-nickname {
  margin: 20rpx;
  font-size: 14px;
}

.asset {
  display: flex;
  border-top: 1px solid #eee;
  padding-top:20rpx;
  padding-bottom:20rpx;
}
.asset .item {
  display: flex;
  flex-direction: column;
  width:250rpx;
  text-align: center;
  font-size: 13px;
  line-height: 20px;
  color:#333;
}
.asset .right {
  border-left: 1px solid #eee;
}

.version {
  width:100%;
  height: 40rpx;
	line-height: 40rpx;
	font-size: 24rpx;
	text-align: center;  
  padding: 40rpx;
}

.my-item{
    width: 100%;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    border-bottom: 1px solid #eee;
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 100rpx;
    font-size:14px;
}

.about{
    width: 100%;
    background: url(https://cdn.it120.cc/images/weappshop/arrow-right.png) no-repeat 750rpx center;
    background-size: 16rpx auto,750rpx auto;
    margin: 20rpx 0; 
    height: 80rpx;
    line-height: 80rpx;
    padding-left: 100rpx;
}
.navitem{
  border-radius: 10px;
}
.order-shortcut {
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
  border-radius: 10px;
}
.order-shortcut .item {
  display: flex;
  flex-direction: column;
  width: 150rpx;
  text-align: center;
}
.order-shortcut .item .icon {
  width: 67rpx;
  height: 67rpx;
  margin-left: 35rpx;
}
.order-shortcut .item .text {
  font-size: 12px;
}
.to-authorize{
  border: none;
  padding: 0rpx;
  margin: 0rpx;
  background: none;
  height: auto;
  line-height: auto;
}
/* 绑定手机号 */
.bind-phone-number{
  margin: 20rpx;
  width: 100%;
}
